{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "vcpkg",
            "displayName": "VCPKG configuration",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                }
            }
        },
        {
            "name": "ninja",
            "displayName": "Ninja generator configuration",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "msvc-compiler",
            "displayName": "MS Visual C++ compiler/linker",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_COMPILER": "cl.exe"
            }
        },
        {
            "name": "msvc-x64",
            "displayName": "MS Visual C++ x64 configuration",
            "hidden": true,
            "inherits": [
                "msvc-compiler"
            ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/W3 /permissive- /Zc:__cplusplus /utf-8 /EHsc"
            }
        },
        {
            "name": "win-x64",
            "displayName": "Windows x64 configuration",
            "hidden": true,
            "inherits": [
                "vcpkg",
                "ninja",
                "msvc-x64"
            ]
        },
        {
            "name": "win-x64-debug",
            "displayName": "Windows x64 debug",
            "inherits": [
                "win-x64"
            ],

            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "win-x64-release",
            "displayName": "Windows x64 release",
            "inherits": [
                "win-x64"
            ],

            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Win-x64-Debug",
            "displayName": "Windows x64 Debug",
            "configurePreset": "win-x64-debug"
        },
        {
            "name": "Win-x64-Release",
            "displayName": "Windows x64 Release",
            "configurePreset": "win-x64-release"
        }
    ]
}